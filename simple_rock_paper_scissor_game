<body>
  <button
  onclick="
  const changetime = Math.random();
  
  const time = (changetime>=0 && changetime<1/3)?'Rock':(changetime>=1/3 && changetime<1/2)?'Paper':'Scissors';

  const winner = (time==='Rock')?'tie.':(time==='Paper')?'you lose.':'you win.';

  console.log(alert(`my data is Rock,computer data is ${time} and ${winner}`));
  ">
    Rock
  </button>
